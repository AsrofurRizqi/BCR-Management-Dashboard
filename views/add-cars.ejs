<%- include('partials/head.ejs') %>
  <body>
    <%- include('partials/navbar.ejs') %>
    <div id="wrapper" class="toggled">
      <!-- Sidebar -->
      <div id="sidebar-wrapper">
          <ul class="sidebar-nav">
              <li class="sidebar-brand">
                  <a>
                      CARS
                  </a>
              </li>
              <li class="list-car">
                  <a href="/">List Cars</a>
              </li>
          </ul>
      </div>
      <!-- Page Content -->
      <div id="page-content-wrapper">
          <div class="container mt-4">
            <div id="file-alert" class="alert alert-fixed text-center" role="alert" style="background-color: black;color: white;height: 40px;padding-top: 0px;">
              File Melebihi 2 Mb
            </div>
              <div class="row">
                  <div class="col-lg-12 mt-5">
                    <div class="" style="font-size: 12px;">
                      <a>Cars</a>
                      <i class="fa-solid fa-chevron-right"></i>
                      <a>List Cars</a>
                      <i class="fa-solid fa-chevron-right"></i>
                      <a>Add New Car</a>
                    </div>
                  </div>
              </div>
              <div class="mt-4 list-cars">
                <h4 class="heading-list">Add New Car</h4>
              </div>
          </div>
          <div class="container container-form">
            <div class="col-md-6">
              <form id="formcars" action="/cars/web" method="post" enctype="multipart/form-data">
                <div class="mb-3 row">
                  <label for="nama" class="col-md-4 col-form-label">Nama</label>
                  <div class="col-md-8">
                    <input type="text" class="form-control" id="nama" name="nama" required placeholder="avanza">
                  </div>
                </div>
                <div class="mb-3 row">
                  <label for="harga" class="col-md-4 col-form-label">Sewa Per Hari</label>
                  <div class="col-md-8">
                    <input type="number" class="form-control" id="harga" name="harga" required placeholder="Rp 0,-">
                  </div>
                </div>
                <div class="mb-3 row">
                  <label class="col-md-4 col-form-label" for="ukuran">Ukuran</label>
                  <div class="col-md-8">
                    <select class="form-select" id="ukuran" name="ukuran" required>
                      <option selected value="small">Small</option>
                      <option value="medium">Medium</option>
                      <option value="large">Large</option>
                    </select>
                  </div>
                </div>
                <div class="mb-3 row">
                  <label for="image" class="col-md-4 col-form-label">Foto</label>
                  <div class="col-md-8">
                    <input type="file" class="form-control" id="image" name="image" required placeholder="https://placeimg.com/640/480/any">
                    <a id="max-size">File size max, 2MB</a>
                  </div>
                </div>
            </form>

            </div>
          </div>

          <div class="container submit-button">
            <a href="/" class="btn btn-outline-primary" style="border-color: #0D28A6;color: #0D28A6;font-weight:700">Cancel</a>
            <button type="submit" form="formcars" class="btn btn-outline-primary" style="background-color: #0D28A6;color: white;font-weight: 700;">Save</button>
          </div>
      </div>

  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  <script src="/script.js"></script>
  </body>
</html>

